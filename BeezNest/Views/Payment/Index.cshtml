@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Index";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9; /* Subtle background color */
    }

    .centered-card {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Ensures vertical centering */
        padding: 20px;
    }

    .card {
        width: 30rem;
        border: none;
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        background-color: #fff; /* White background */
        padding: 20px;
    }

    .card-body h5 {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 1rem;
        color: #333;
    }

    .card-body p {
        margin: 0.5rem 0;
        font-size: 1rem;
        color: #555;
    }

    form {
        margin-top: 1rem;
    }

    label {
        font-size: 0.9rem;
        color: #333;
        font-weight: 500;
    }

    input[type="file"] {
        margin-top: 0.5rem;
    }

    .btn-dark {
        background-color: #343a40;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        font-size: 1rem;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        .btn-dark:hover {
            background-color: #23272b;
        }
</style>

<div class="centered-card">
    <div class="card">
        <div class="card-body">
            <h5 class="text-center">Make Transfer to the Below Details</h5>
            <p><strong>Bank:</strong> Palmpay</p>
            <p><strong>Account Number:</strong> 9550118384</p>
            <p><strong>Account Name:</strong> BeezNest E-space</p>
        </div>
        <form id="checkoutForm" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="proofOfPayment" class="form-label">Upload Evidence of Payment Below</label>
                <input type="file" class="form-control" id="proofOfPayment" name="proofOfPayment" accept="image/*" />
            </div>
            <div class="d-grid">
                <button type="button" class="btn btn-dark" onclick="checkOutNow('@User.Identity.Name')">Submit</button>
            </div>
        </form>
    </div>
</div>
