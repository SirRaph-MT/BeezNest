<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeezNest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/sweetalert2.css" rel="stylesheet" />

    <style>

        .navbar {
            padding: 0.5rem 1rem;
        }


        .input-group input {
            height: 40px;
            border: 1px solid #ced4da;
        }

        .input-group button {
            height: 40px;
        }

    </style>
    <script>
        function errorAlert(message) {
            Swal.fire({
                icon: 'error',
                text: message,
                timer: 60000,
                confirmButtonColor: "#366092",
            })
        }

        function infoAlert(message) {
            Swal.fire({
                icon: 'info',
                text: message,
                timer: 30000,
                confirmButtonColor: "#366092",
            })
        }

        function infoAlertWithStyles(message) {
            Swal.fire({
                title: 'Incomplete Payment',
                icon: 'info',
                text: message,
                confirmButtonColor: "#366092",
            })
        }
        function newInfoAlert(message, url) {
            Swal.fire({
                icon: 'info',
                text: message,
                timer: 30000,
                confirmButtonColor: "#366092",
            }).then((isConfirm) => {
                if (isConfirm) {
                    location.href = url;
                }
            })
        }
        function successAlert(message) {
            Swal.fire({
                icon: 'success',
                text: message,
                timer: 30000,
                confirmButtonColor: "#366092",
            })
        }

        function newErrorAlert(message, url) {
            Swal.fire({
                icon: 'error',
                text: message,
                timer: 30000,
                confirmButtonColor: "#366092",
            }).then(function () {
                location.href = url;
            })
        }

        function newSuccessAlert(message, url) {
            Swal.fire({
                icon: 'success',
                text: message,
                confirmButtonColor: "#366092",
            }).then((isConfirm) => {
                if (isConfirm) {
                    location.reload(url);
                }
            })

        }
        function successAlertWithRedirect(message, url) {
            Swal.fire({
                title: "Success",
                text: message,
                icon: "success",
                timer: 30000,
                overlay: "background - color: rgba(43, 165, 137, 0.45)",
                confirmButtonColor: "#366092",
            }).then(function () {

                location.href = url;
            })
        }

        function successAlertWithFunction(message, action) {
            Swal.fire({
                title: "Success",
                text: message,
                icon: "success",
                timer: 30000,
                overlay: "background - color: rgba(43, 165, 137, 0.45)",
                confirmButtonColor: "#366092",
            }).then(function () {
                action;
            })
        }
    </script>



</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-light border-bottom box-shadow fixed-top">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Logo and Brand -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/StockPhotos/websiteLogo.jpeg" alt="BeezNest Logo" class="img-fluid"
                         style="height: 40px; width: auto; margin-right: 10px;">
                    <span class="fw-bold text-dark">BeezNest</span>
                </a>

                <!-- Login and Register Links -->
                <ul class="navbar-nav d-flex flex-row">
                    <li class="nav-item mx-2">
                        <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Account" asp-action="Login">
                            <i class="fa-solid fa-sign-in-alt"></i> Login
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Account" asp-action="Registration">
                            <i class="fa-solid fa-user-plus"></i> Register
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>






    <div class="container">
        <main role="main" class="pb-3" style="min-height:550px;">
            @RenderBody()
        </main>
    </div>


    <!-- footer-->
    <footer class="p-5 bg-dark text-white text-center position relative">
        <div class="container">
            <p class="lead">copyright &copy; 2024 BeezNest E-commerce <a href="#" class="bottom-0 end-0 p-5"><i class="bi bi-arrow-up-circle h1 text-primary float-end"></i></a></p>

        </div>

    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("script", required: false)

</body>
</html>
