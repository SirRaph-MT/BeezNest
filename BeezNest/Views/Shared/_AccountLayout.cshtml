<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeezNest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/sweetalert2.css" rel="stylesheet" />

    <style>
        .footer-3 ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .footer-3 a {
            text-decoration: none;
            color: white;
        }

            .footer-3 a:hover {
                text-decoration: underline;
                color: #FFD700;
            }

        .input-group {
            width: 100%;
            height: 55px;
        }

        .CartCount {
            position: relative;
            bottom: 10px;
            text-decoration: none;
        }

        .SearchForm {
            position: fixed;
            top: 60px; /* Adjust this to the correct space below the header */
            width: 75%;
            z-index: 9999; /* Higher z-index to ensure it stays on top */
            background-color: #fff; /* Add a background color if transparency is an issue */
            margin-left: 200px;
        }
        .container-fluid i{
            color:white;
        }

    </style>
    <script>
        function errorAlert(message) {
            Swal.fire({
                icon: 'error',
                text: message,
                timer: 60000,
                confirmButtonColor: "#366092",
            })
        }

        function infoAlert(message) {
            Swal.fire({
                icon: 'info',
                text: message,
                timer: 30000,
                confirmButtonColor: "#366092",
            })
        }

        function infoAlertWithStyles(message) {
            Swal.fire({
                title: 'Incomplete Payment',
                icon: 'info',
                text: message,
                confirmButtonColor: "#366092",
            })
        }
        function newInfoAlert(message, url) {
            Swal.fire({
                icon: 'info',
                text: message,
                timer: 30000,
                confirmButtonColor: "#366092",
            }).then((isConfirm) => {
                if (isConfirm) {
                    location.href = url;
                }
            })
        }
        function successAlert(message) {
            Swal.fire({
                icon: 'success',
                text: message,
                timer: 30000,
                confirmButtonColor: "#366092",
            })
        }

        function newErrorAlert(message, url) {
            Swal.fire({
                icon: 'error',
                text: message,
                timer: 30000,
                confirmButtonColor: "#366092",
            }).then(function () {
                location.href = url;
            })
        }

        function newSuccessAlert(message, url) {
            Swal.fire({
                icon: 'success',
                text: message,
                confirmButtonColor: "#366092",
            }).then((isConfirm) => {
                if (isConfirm) {
                    location.reload(url);
                }
            })

        }
        function successAlertWithRedirect(message, url) {
            Swal.fire({
                title: "Success",
                text: message,
                icon: "success",
                timer: 30000,
                overlay: "background - color: rgba(43, 165, 137, 0.45)",
                confirmButtonColor: "#366092",
            }).then(function () {

                location.href = url;
            })
        }

        function successAlertWithFunction(message, action) {
            Swal.fire({
                title: "Success",
                text: message,
                icon: "success",
                timer: 30000,
                overlay: "background - color: rgba(43, 165, 137, 0.45)",
                confirmButtonColor: "#366092",
            }).then(function () {
                action;
            })
        }
    </script>


     
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="btn text-white" type="button" data-bs-toggle="offcanvas" data-bs-target="#demo">
                    <span><i class="fa-solid fa-bars"></i></span>
                </button>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BeezNest</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>              
                <div class="ms-5">
                    <ul class="navbar-nav">
                        <li class="nav-item account">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item account">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="registration">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        
    </header>


    
    <div class="container" >
        <main role="main" class="pb-3" style="min-height:550px;">
            @RenderBody()
        </main>
    </div>

