@model Core.Models.AskedQuestions

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" asp-action="CreateQuestions">
    <div class="row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Questions"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Questions" class="form-control w-100" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Answers"></label>
                </div>
                <div class="col-8 pt-2">
                    <textarea asp-for="Answers" class="form-control w-100"></textarea>
                </div>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-8 offset-4 row">
                <div class="col pt-3">
                    <input type="submit" class="btn btn-info w-100" value="Add" />
                </div>
                <div class="col pt-3">
                    <a asp-action="Index" class="btn btn-success w-100">
                        <i class="fa-solid fa-right-from-bracket"></i>  Back
                    </a>
                </div>
            </div>
        </div>
    </div>

</form>