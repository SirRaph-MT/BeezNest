@model Core.ViewModels.UploadProductViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <form method="post" asp-action="CreateProduct" enctype="multipart/form-data">
        <div class="card shadow-lg">
            <div class="card-body">
                <h5 class="card-title text-center text-decoration-underline mb-4">Upload Products</h5>

                <div class="row g-3">
                    <!-- Upload Images -->
                    <div class="col-md-6 col-lg-4">
                        <label class="form-label">Upload Images</label>
                        <input type="file" class="form-control" accept="image/*" asp-for="ProductImages" multiple required />
                    </div>

                    <!-- Product/Model -->
                    <div class="col-md-6 col-lg-4">
                        <label class="form-label">Product/Model</label>
                        <input type="text" class="form-control" asp-for="ProductsModel" placeholder="Enter Product/model" required />
                    </div>

                    <!-- Specifications -->
                    <div class="col-md-6 col-lg-4">
                        <label class="form-label">Specifications</label>
                        <input type="text" class="form-control" asp-for="Specifications" placeholder="Enter specifications" required />
                    </div>

                    <!-- Price -->
                    <div class="col-md-6 col-lg-4">
                        <label class="form-label">Price</label>
                        <input type="number" class="form-control" asp-for="Price" placeholder="Enter price" required />
                    </div>

                    <!-- Number of Items -->
                    <div class="col-md-6 col-lg-4">
                        <label class="form-label">Number of Items</label>
                        <input type="number" class="form-control" asp-for="NumberOfItem" placeholder="Enter number of items" required />
                    </div>

                    <!-- Available Colors -->
                    <div class="col-md-6 col-lg-4">
                        <label class="form-label">Available Colors</label>
                        <input type="text" class="form-control" asp-for="Colors" placeholder="Enter colors (e.g., Red, Blue, Green)" required />
                    </div>

                    <!-- Description Field -->
                    <div class="col-12">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" asp-for="Description" rows="4" placeholder="Enter product description" required></textarea>
                    </div>

                    <!-- Submit and Back Buttons -->
                    <div class="col-12 text-center mt-4">
                        <button type="submit" class="btn btn-info px-4 me-2">Add</button>
                        <a asp-action="Index" class="btn btn-success px-4">
                            <i class="fa-solid fa-right-from-bracket"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
