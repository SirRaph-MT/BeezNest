@model Core.Models.Dropdown

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Dropdowns</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Key"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Key" class="form-control w-100" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DropdownName"></label>

                    </div>
                    <div class="col-8 pt-2">
                        <input asp-for="DropdownName" class="form-control w-100" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col pt-3">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col pt-3">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fa-solid fa-right-from-bracket"></i>  Back
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @*Keep this empty*@
                </div>
            </div>
        </div>


    </div>

</form>
