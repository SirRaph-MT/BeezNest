@model IEnumerable<Core.Models.UploadProduct>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Search Products";
}

<h2 class="text-center">Search Results</h2>

@if (!Model.Any())
{
    <p>No products found.</p>
}
else
{
    <div class="row mt-5">
        @foreach (var product in Model)
        {
            <div class="col-md-2 mb-4 mt-5">
                <a asp-controller="Home" asp-route-productId="@product.Id" asp-action="ProductDetails" class="card h-100 position-relative text-decoration-none" style="color: inherit;">

                    <img src="@product.ProductImages?.FirstOrDefault()?.ImageUrl" class="card-img-top" alt="@product.ProductsModel" style="height: 200px; object-fit: cover;" />
                    <div class="card-body" style="height: 200px;">
                        <h5 class="card-title" style="font-size: 1rem; margin-bottom: 0.5rem;">@product.ProductsModel</h5>
                        <p class="card-text" style="font-size: 0.9rem; margin-bottom: 0.25rem;">
                            <strong>Specifications: </strong>@product.Specifications
                        </p>
                        <p class="card-text" style="font-size: 0.9rem; margin-bottom: 0.25rem;">
                            <strong>Price: </strong>₦@product.Price?.ToString("N2")
                        </p>
                        <p class="card-text" style="font-size: 0.9rem; margin-bottom: 0;">
                            <strong>Number of Items: </strong>@product.NumberOfItem
                        </p>
                    </div>
                    <span class="stretched-link"></span>
                </a>
            </div>
        }
    </div>
}
