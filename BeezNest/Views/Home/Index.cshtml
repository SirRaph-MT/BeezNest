@model IEnumerable<Core.Models.UploadProduct>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}

<style>
   /*  .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        height: 200px;
    } */

    .card-title {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }

    .product-card:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease-in-out;
        text-decoration: none;
    }



</style>


<div class="container background">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-4">
                <a asp-controller="Home" asp-route-productId="@product.Id" asp-action="ProductDetails" class="card h-100 position-relative text-decoration-none product-card">
                    <img src="@product.ProductImages?.FirstOrDefault()?.ImageUrl" class="card-img-top" alt="@product.ProductsModel" />
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductsModel</h5>
                        <p class="card-text">
                            <strong>Specifications: </strong>@product.Specifications
                        </p>
                        <p class="card-text">
                            <strong>Price: </strong>₦@product.Price?.ToString("N2")
                        </p>
                        <p class="card-text">
                            <strong>Item left: </strong>@product.NumberOfItem
                        </p>
                    </div>
                    <span class="stretched-link"></span>
                </a>
            </div>
        }
    </div>
</div>


<!--Question Accordion-->

<section id="Questions" class="p-5">
        <h2 class="text-center mb-4">Frequently Asked Questions</h2>
        <div class="accordion accordion-flush" id="Questions">
            <!-- item 1 -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#question-one">
                        Do BeezNest have a Physical Office?
                    </button>
                </h2>
                <div id="question-one" class="accordion-collapse collapse" data-bs-parent="#Questions">
                    <div class="accordion-body">
                        There are several outlets within Nigeria that we operate but our Head Office is at No 2 Apapa Road, Lagos.

                    </div>
                </div>
            </div>

            <!-- item 2 -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#question-two">
                     Warranty & Return ?
                    </button>
                </h2>
                <div id="question-two" class="accordion-collapse collapse" data-bs-parent="#Questions">
                    <div class="accordion-body">
                      All products are under warranty within 7 days after reception. Any product that has an issue should returned immediately and would be attended to
                      within a short possible while.

                    </div>
                </div>
            </div>


            <!-- item 3 -->

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#question-three">
                        What Do I Need To Know?
                    </button>
                </h2>
                <div id="question-three" class="accordion-collapse collapse" data-bs-parent="#Questions">
                    <div class="accordion-body">
                     It takes a maximum of 3 days to receive any package upon order nationwide.

                    </div>
                </div>
            </div>

            <!-- item 4 -->

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#question-four">
                        Can I get A discount?
                    </button>
                </h2>
                <div id="question-four" class="accordion-collapse collapse" data-bs-parent="#Questions">
                    <div class="accordion-body">
                        If you order multiple items and each quantity above 5, there would be a massive discount.
                        We also sell wholesale price given if you are retailer.
                    </div>
                </div>
            </div>

        </div>
</section>

